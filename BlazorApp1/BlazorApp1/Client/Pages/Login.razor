@page "/login"

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">

<div class="d-flex align-items-center justify-content-center" style="height:100vh; width:100vw">
    <div class="log-content">
        <div class="sign-heading">Log in</div>
        <div class="sign-sub-heading">Please fill in all the fields below</div>

        <div class="input-container">
            <div class="input-box">
                <span class="details">Email</span>
                <input class="text-area"
                       type="email"
                       placeholder="Enter your email" />
            </div>

            <div class="input-box">
                <span class="details">Password</span>
                <input class="text-area"
                       type="password"
                       placeholder="Enter your password" />
            </div>

            <a class="signup-btn btn btn-primary" href="homepage">Login</a>

            <a href="signup" style="width: 100%;" class="d-flex justify-content-center">Sign Up</a>
        </div>
    </div>
</div>

